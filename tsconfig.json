{
	"compilerOptions": {
		/* Basic Options */
		"target": "ES2020", // Set the JavaScript version (ES2020 or later).
		"module": "ESNext", // Use commonJS module system (good for Node.js).
		//"lib": ["es6", "dom"], // Include JavaScript standard library + browser DOM.
		"allowJs": true, // Allow JavaScript files to be compiled.
		"checkJs": false, // Skip type checking for JavaScript files.
		"outDir": "./dist", // Output directory for compiled files.
		"rootDir": "./src", // Root directory for TypeScript source files.
		"strict": true, // Enable strict type-checking options.
		"esModuleInterop": true, // Support importing CommonJS modules (like `require`).
		"resolveJsonModule": true, // Enable importing JSON files.
		"sourceMap": true, // Generate source maps for easier debugging.

		/* Module Resolution Options */
		"moduleResolution": "node", // Use Node.js module resolution.
		"baseUrl": "./", // Base directory for resolving non-relative imports.
		"paths": {
			"@/*": ["src/*"] // Set up path aliases for easier imports.
		},

		/* Type Checking Options */
		"strictNullChecks": true, // Ensure null/undefined values are handled explicitly.
		"noImplicitAny": true, // Disallow variables with an implicit `any` type.
		"noImplicitThis": true, // Disallow `this` being used with an implicit `any`.
		"alwaysStrict": true, // Emit strict mode for JavaScript (`"use strict"`).

		/* Performance Options */
		"skipLibCheck": true, // Skip type checking for library declaration files.
		"incremental": true, // Enable incremental compilation.
		"noEmitOnError": true, // Avoid emitting files if there are errors.

		/* Linting and Diagnostics */
		"noUnusedLocals": false, // Warn on unused local variables.
		"noUnusedParameters": false, // Warn on unused parameters in functions.
		"noFallthroughCasesInSwitch": true, // Disallow fallthrough cases in switch statements.
		"noImplicitReturns": true, // Ensure all code paths return a value in functions.

		//"noEmit": true, // Do not emit output files.
		//"allowImportingTsExtensions": true, // Allow importing TypeScript files with .ts extension.
	},
	"include": ["src"], // Specify which files to include in the compilation.
	"exclude": ["node_modules", "dist"] // Exclude folders to prevent redundant compilation.
}